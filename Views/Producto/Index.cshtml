@model IEnumerable<CRUDPeopleMotion.Models.PRODUCTO>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de productos</h2>

<p class="">
    @Html.ActionLink("Crear Nuevo Producto", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORIA)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var producto in ViewBag.producto) {
    <tr>
        <td>
            @producto.Nombre
        </td>
        <td>
            @producto.CATEGORIA.Nombre
        </td>
        <td>
            <a href="@Url.Action("Editar", new { id = producto.Id })" class="btn btn-primary">
                <i class="bi bi-pencil"></i>
            </a>
            <a href="@Url.Action("Detalles", new { id = producto.Id })" class="btn btn-success">
                <i class="bi bi-eye"></i>
            </a>
            <a href="@Url.Action("Eliminar", new { id = producto.Id })" class="btn btn-danger">
                <i class="bi bi-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
