@model IEnumerable<CRUDPeopleMotion.Models.PRODUCTO>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de productos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var producto in ViewBag.producto) {
    <tr>
        <td>
            @producto.Nombre
        </td>
        <td>
            @producto.CategoriaId
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id= producto.Id }, new { @class="btn btn-primary",@style="color:white" }) |
            @Html.ActionLink("Detalles", "Details", new { id= producto.Id }, new { @class = "btn btn-success", @style = "color:white" }) |
            @Html.ActionLink("Delete", "Delete", new { id= producto.Id }, new { @class = "btn btn-danger", @style = "color:white" })
        </td>
    </tr>
}

</table>
